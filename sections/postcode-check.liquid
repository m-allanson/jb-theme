{% comment %}
    Renders the postcode checker

    Lets people see if we deliver to them. Positive results stored in localstorage

{% endcomment %}
<div id="jones-postcode-wrapper" class="">
    <label for="jones-postcode-check" class="block text-2xl">Local Delivery</label>
    <p class="mt-2 max-w-prose">We deliver to South East London four days a week.</p>
  <input type="text" class="w-auto mx-auto" id="jones-postcode-check" type="text" name="" value="" placeholder="SE15">
  <div class="mt-4">
    <p class="text-green-800" id="jones-postcode-check-success">We deliver to your address.</p>
    <p class="text-red-800" id="jones-postcode-check-fail">Unfortunately we don't deliver to your address yet.</p>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.postcode-check.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
      {
      "type": "text",
      "id": "title",
      "default": "Local Delivery",
      "label": "t:sections.postcode-check.settings.title.label"
    }
  ],
  "presets": [
     {
       "name": "Postcode Check"
     }
  ]
  
}
{% endschema %}

